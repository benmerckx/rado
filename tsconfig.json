{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "allowImportingTsExtensions": true,
    "moduleResolution": "NodeNext",
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "emitDeclarationOnly": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["bun-types", "@cloudflare/workers-types"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "test"]
}
