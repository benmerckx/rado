{
  "compilerOptions": {
    "noEmit": true,
    "module": "NodeNext",
    "target": "ESNext",
    "allowImportingTsExtensions": true,
    "moduleResolution": "NodeNext",
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["bun-types", "@cloudflare/workers-types"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["."]
}
