{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "allowImportingTsExtensions": true,
    "moduleResolution": "NodeNext",
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["bun-types", "@cloudflare/workers-types"]
  }
}
